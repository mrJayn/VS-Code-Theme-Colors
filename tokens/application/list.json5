{
	// List and trees like the File Explorer.
	// An active list/tree has keyboard focus, an inactive does not.
	list: {
		activeSelectionBackground: { value: '{color.background.secondary.value}' },
		activeSelectionForeground: { value: '{color.font.active.value}' },

		inactiveSelectionBackground: { value: '{color.background.selection.tertiary.inactive.value}' },
		inactiveSelectionForeground: { value: '{color.font.secondary.value}' },

		focusBackground: { value: '{color.background.selection.tertiary.active.value}' },
		focusForeground: { value: '{color.font.active.value}' },

		hoverBackground: { value: '{theme.transparent}' },
		hoverForeground: { value: '{color.font.link.secondary.active.value}' },

		dropBackground: { value: '{color.background.selection.secondary.active.value}' },

		highlightForeground: { value: '{color.font.primary.value}' },
